{
	"name": "gaming-tracker",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"generate-favicons": "bun scripts/generate-favicons.ts",
		"optimize-covers": "bun scripts/optimize-covers-full.ts",
		"optimize-logo": "bun scripts/optimize-logo.ts",
		"test:game-management": "vitest run tests/test-game-management.test.ts",
		"test:data-persistence": "vitest run tests/test-data-persistence.test.ts",
		"test:browser-navigation": "vitest run tests/test-browser-navigation.test.ts",
		"test:theme-switching": "vitest run tests/test-theme-switching.test.ts",
		"test:unit": "vitest run",
		"test:completed-games-caching": "vitest run tests/test-completed-games-caching.test.ts",
		"test:cover-loading": "vitest run tests/test-cover-loading.test.ts",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:bun": "bun test --preload ./tests/bun-setup.ts",
		"validate": "bun run lint:fix && bun run format && bun run check && bun run test"
	},
	"dependencies": {
		"dexie": "^4.3.0",
		"string-similarity": "^4.0.4",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@opentelemetry/api": "^1.9.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.52.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/postcss": "^4.1.18",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"@types/bun": "^1.3.9",
		"@types/node": "^25.2.3",
		"autoprefixer": "^10.4.24",
		"date-fns": "^4.1.0",
		"eslint": "^9.39.2",
		"eslint-plugin-svelte": "^3.15.0",
		"fake-indexeddb": "^6.2.5",
		"globals": "^17.3.0",
		"happy-dom": "^20.6.1",
		"jsdom": "^27.4.0",
		"lucide-svelte": "^0.562.0",
		"postcss": "^8.5.6",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"shadcn-svelte": "^1.1.1",
		"sharp": "^0.34.5",
		"svelte": "^5.51.1",
		"svelte-check": "^4.4.0",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.7.0",
		"typescript-eslint": "^8.55.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	}
}
