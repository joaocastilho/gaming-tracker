{
	"name": "gaming-tracker",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"compare-images": "bun scripts/compare-images-and-games.ts",
		"convert-csv": "bun scripts/convert-csv-to-json.ts",
		"generate-favicons": "bun scripts/generate-favicons.ts",
		"optimize-covers": "bun scripts/optimize-covers-full.ts",
		"optimize-logo": "bun scripts/optimize-logo.ts",
		"test:game-management": "vitest run tests/test-game-management.test.ts",
		"test:data-persistence": "vitest run tests/test-data-persistence.test.ts",
		"test:browser-navigation": "vitest run tests/test-browser-navigation.test.ts",
		"test:theme-switching": "vitest run tests/test-theme-switching.test.ts",
		"test:unit": "vitest run",
		"test:completed-games-caching": "vitest run tests/test-completed-games-caching.test.ts",
		"test:cover-loading": "vitest run tests/test-cover-loading.test.ts",
		"test": "vitest run",
		"validate": "bun run lint:fix && bun run format && bun run check && bun run test"
	},
	"dependencies": {
		"string-similarity": "^4.0.4",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@opentelemetry/api": "^1.9.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "^4.1.18",
		"@types/bun": "^1.3.4",
		"@types/node": "^24.10.4",
		"autoprefixer": "^10.4.23",
		"date-fns": "^4.1.0",
		"eslint": "^9.39.2",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"jsdom": "^27.3.0",
		"lucide-svelte": "^0.555.0",
		"postcss": "^8.5.6",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"shadcn-svelte": "^1.1.0",
		"sharp": "^0.34.5",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.0",
		"vite": "^7.3.0",
		"vitest": "^4.0.16"
	}
}
