{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"types": ["svelte", "vite/client", "@types/bun", "vitest/globals"],
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"allowJs": true
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.svelte",
		"functions/**/*.ts",
		"tests/**/*.ts",
		"vite.config.ts",
		"vitest.config.ts"
	]
}
